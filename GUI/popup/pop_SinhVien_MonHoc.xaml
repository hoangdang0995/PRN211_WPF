                <dxg:GridColumn FieldName="HOTENSINHVIEN" Header="HỌ TÊN SINH VIÊN" ReadOnly="True" />
                <dxg:GridColumn FieldName="NGAYSINH" Header="NGÀY SINH" ReadOnly="True" />
                <dxg:GridColumn Name="gridColumn2" FieldName="check" Header="LỰA CHỌN" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView Name="tableView1" ShowTotalSummary="True" />
            </dxg:GridControl.View>
        </dxg:GridControl>
        <StackPanel Grid.Row="2" Orientation="Horizontal"></StackPanel>
        
    </Grid>
</Window>
