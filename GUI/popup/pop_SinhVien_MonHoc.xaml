            <RowDefinition Height="70" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16" Margin="5" >Lớp học : </TextBlock>
            <TextBox Name="txt_lop" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Margin="5" Width="200" Height="30" IsEnabled="True"></TextBox>
            <TextBlock Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16"  Margin="5" >Môn học : </TextBlock>
