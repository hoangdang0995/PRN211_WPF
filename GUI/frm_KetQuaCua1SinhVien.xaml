<UserControl x:Class="GUI.frm_KetQuaCua1SinhVien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" Loaded="UserControl_Loaded" d:DesignWidth="1200" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Button.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Height="30" FontSize="13" HorizontalAlignment="Left" Margin="5 0 0 0" VerticalAlignment="Center" >Chọn Khoa :</TextBlock>
            <ComboBox  Height="30" FontSize="13"  Width="200" Margin="5 0 0 0" x:Name="cbx_khoa" HorizontalAlignment="Left" VerticalAlignment="Center"  IsReadOnly="True" SelectionChanged="cbx_khoa_SelectionChanged"></ComboBox>
            <TextBlock Height="30"  FontSize="13" Margin="5 0 0 0" HorizontalAlignment="Left" VerticalAlignment="Center" >Chọn Ngành:</TextBlock>
            <ComboBox  Height="30" FontSize="13" Width="180" Margin="5 0 0 0" x:Name="cbx_chuyennganh" HorizontalAlignment="Left" VerticalAlignment="Center" IsReadOnly="True" SelectionChanged="cbx_chuyennganh_SelectionChanged"></ComboBox>
            <TextBlock Height="30"  FontSize="13" Margin="5 0 0 0" HorizontalAlignment="Left" VerticalAlignment="Center" >Chọn Lớp Học :</TextBlock>
            <ComboBox  Height="30" FontSize="13" Width="160" Margin="5 0 0 0" x:Name="cbx_lophoc" HorizontalAlignment="Left" VerticalAlignment="Center"  IsReadOnly="True" SelectionChanged="cbx_lophoc_SelectionChanged"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBlock Height="30" FontSize="13" HorizontalAlignment="Left" Margin="5 0 0 0" VerticalAlignment="Center" >Chọn Sinh viên : </TextBlock>
            <ComboBox  Height="30" FontSize="13"  Width="250" Margin="5 0 0 0" x:Name="cbx_SinhVien" HorizontalAlignment="Left" VerticalAlignment="Center"  IsReadOnly="True"></ComboBox>
            <Button Height="30"  Name="cmd_HienThiDS" Style="{StaticResource ButtonStyle}" FontSize="13" Width="100" Margin="10 0 0 0" Click="cmd_HienThiDS_Click">Hiển thị DS</Button>
            <Button Height="30"  Name="cmd_XuatDS" Style="{StaticResource ButtonStyle}" FontSize="13" Width="100" Margin="10 0 0 0" Click="cmd_XuatDS_Click">Xuất tập tin</Button>
        </StackPanel>
        <dxg:GridControl Name="gctrl_diem"  Grid.Row="2" AutoPopulateColumns="False" Margin="0,0,12,0" AllowColumnMRUFilterList="True" AllowMRUFilterList="True" IsFilterEnabled="True" ShowLoadingPanel="False" ShowBorder="False" AutoExpandAllGroups="True" IsRecursiveExpand="False" DesignTimeUseDistinctSampleValues="True" DesignTimeShowSampleData="True" IsEnabled="True">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="MABANGDIEM" Header="MÃ BẢNG ĐIỂM" ReadOnly="True" Visible="False" />
                <dxg:GridColumn FieldName="MAMONHOC" Header="MÃ MÔN HỌC" ReadOnly="True" VisibleIndex="0" />
                <dxg:GridColumn FieldName="TENMONHOC" Header="TÊN MÔN HỌC" ReadOnly="True" VisibleIndex="1" />
                <dxg:GridColumn FieldName="DIEMGIUAKY" Header="ĐIỂM GIỮA KỲ" VisibleIndex="2" />
                <dxg:GridColumn FieldName="DIEMCUOIKY" Header="ĐIỂM CUỐI KỲ" VisibleIndex="3" />
                <dxg:GridColumn FieldName="DIEMTHILAI" Header="ĐIỂM THI LẠI" VisibleIndex="4" />
                <dxg:GridColumn FieldName="DTB" Header="TỔNG KẾT MÔN" VisibleIndex="5" />
                <dxg:GridColumn FieldName="KQ" Header="GHI CHÚ" VisibleIndex="6" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView Name="tableView1" ShowTotalSummary="True" />
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</UserControl>
