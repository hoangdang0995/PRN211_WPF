        <dxg:GridControl Grid.Row="1" Name="gctrl_SinhVien" Background="#FFC19494" BorderBrush="#FFB44747" Foreground="#FF0A0909" AutoPopulateColumns="False" Margin="0,0,12,0" AllowColumnMRUFilterList="True" AllowMRUFilterList="True" IsFilterEnabled="True" ShowLoadingPanel="False" ShowBorder="False" AutoExpandAllGroups="True" IsRecursiveExpand="False" DesignTimeUseDistinctSampleValues="True" DesignTimeShowSampleData="True" IsEnabled="True">
