<UserControl x:Class="GUI.frm_NhapDiem"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Button.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox Name="grbthongtin" Grid.Row="0" Grid.Column="0" Background="#3399FF">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"  />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40"  />
                    <RowDefinition Height="40"  />
                    <RowDefinition Height="40"  />
                    <RowDefinition Height="40"  />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0"  Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" >Chọn khoa : </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" >Chuyên ngành :</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="2" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" >Môn học :</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="3" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" >Lớp học :</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="4" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" >Năm bắt đầu :</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="5" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="18" >Học kỳ :</TextBlock>

                <ComboBox Grid.Column="1" Grid.Row="0" Name="cbx_khoa" Margin="0,2,0,2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="250" SelectionChanged="cbx_khoa_SelectionChanged" />
                <ComboBox Grid.Column="1" Grid.Row="1" Name="cbx_chuyennganh" Margin="0,2,0,2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="250" SelectionChanged="cbx_chuyennganh_SelectionChanged" />
                <ComboBox Grid.Column="1" Grid.Row="2" Name="cbx_monhoc" Margin="0,2,0,2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="250"/>
                <ComboBox Grid.Column="1" Grid.Row="3" Name="cbx_lophoc" Margin="0,2,0,2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="250" SelectionChanged="cbx_lophoc_SelectionChanged" />
                <!-- <ComboBox Grid.Column="1" Grid.Row="4" Name="cbx_khoahoc" Margin="0,2,0,2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="250" />-->
                <TextBox Name="txt_nambatdau" Grid.Column="1" Height="30" Grid.Row="4" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="250"></TextBox>

                <TextBox Grid.Column="1" Grid.Row="5" Name="txt_hocky" Height="30" IsEnabled="False" Margin="0,2,0,2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="250" />
                <!--<StackPanel  Grid.ColumnSpan="2" Grid.Row="6" Orientation="Horizontal">-->
                <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="8" Height="35" Width="200" x:Name="cmd_show"  Style="{StaticResource ButtonStyle}" FontSize="16" Click="cmd_show_Click">Hiển thị danh sách</Button>
                    <!--<Button Margin="5" Height="35" Width="200" x:Name="cmd_themsinhvien"  Style="{StaticResource ButtonStyle}" FontSize="16" Click="cmd_themsinhvien_Click">Thêm Sinh viên</Button>-->
                <!--</StackPanel>-->                
            </Grid>
        </GroupBox>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid HorizontalAlignment="Center" Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Margin="5" Height="35" Width="150" x:Name="cmd_add"  Style="{StaticResource ButtonStyle}" FontSize="16" Click="cmd_add_Click">Lưu danh sách</Button>
                <!--<Button Grid.Column="1" Margin="5" Height="35" Width="150" x:Name="cmd_import"  Style="{StaticResource ButtonStyle}" FontSize="16" Click="cmd_import_Click">Import</Button>-->
                <Button Grid.Column="2" Margin="5" Height="35" Width="150" x:Name="cmd_export"  Style="{StaticResource ButtonStyle}" FontSize="16" Click="cmd_export_Click">Xuất tập tin</Button>
            </Grid>

            <dxg:GridControl Name="gctrl_diem" Margin="0,0,12,0" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"  AutoPopulateColumns="False" AllowColumnMRUFilterList="True" AllowMRUFilterList="True" IsFilterEnabled="True" ShowLoadingPanel="False" ShowBorder="False" AutoExpandAllGroups="True" IsRecursiveExpand="False" DesignTimeUseDistinctSampleValues="True" DesignTimeShowSampleData="True" IsEnabled="True">
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="MABANGDIEM" Header="MÃ SINH VIÊN" ReadOnly="True" Visible="False" />
                    <dxg:GridColumn FieldName="MASINHVIEN" Header="MÃ SINH VIÊN" ReadOnly="True" VisibleIndex="0" />
                    <dxg:GridColumn FieldName="HOTENSINHVIEN" Header="HỌ TÊN SINH VIÊN" ReadOnly="True" VisibleIndex="1" />
                    <dxg:GridColumn FieldName="DIEMGIUAKY" Header="ĐIỂM GIỮA KỲ" VisibleIndex="2" />
                    <dxg:GridColumn FieldName="DIEMCUOIKY" Header="ĐIỂM CUỐI KỲ" VisibleIndex="3" />
                    <dxg:GridColumn FieldName="DIEMTHILAI" Header="ĐIỂM THI LẠI" VisibleIndex="4" />
                    <!--<dxg:GridColumn FieldName="TONGKETMON" Header="TỔNG KẾT MÔN" VisibleIndex="5" />-->
                    <dxg:GridColumn FieldName="GHICHU" Header="GHI CHÚ" VisibleIndex="6" />
                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView Name="View"  AutoWidth="True" ShowTotalSummary="True" ShowFixedTotalSummary="True" SearchString=" " ShowSearchPanelFindButton="True" SearchPanelClearOnClose="True"/>
                </dxg:GridControl.View>
            </dxg:GridControl>
        </Grid>
    </Grid>
</UserControl>
