<UserControl xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"  x:Class="GUI.frm_DanToc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="500" Width="auto" Loaded="Window_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Button.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Name="grbthongtindantoc" Grid.Row="0" Background="#FF3EA6BA">
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Margin="5" Height="45" Width="100" x:Name="cmdadd" Click="cmdadd_Click" Style="{StaticResource ButtonStyle}" FontSize="16">Thêm</Button>
                <Button Grid.Column="1" Margin="5" Height="45" Width="100" x:Name="cmdedit" Click="cmdedit_Click" Style="{StaticResource ButtonStyle}" FontSize="16">Sửa</Button>
                <Button Grid.Column="2" Margin="5" Height="45" Width="100" x:Name="cmddelete" Click="cmddelete_Click" Style="{StaticResource ButtonStyle}" FontSize="16">Xóa</Button>
                <!--<Button Grid.Column="3" Margin="5" Height="45" Width="100" x:Name="cmdimport" Style="{StaticResource ButtonStyle}" FontSize="16" Click="cmdimport_Click">Import</Button>-->
                <Button Grid.Column="4" Margin="5" Height="45" Width="100" x:Name="cmdexport"  Style="{StaticResource ButtonStyle}" FontSize="16" Click="cmdexport_Click">Xuất tập tin</Button>
            </Grid>
        </GroupBox>
        <dxg:GridControl  Grid.Row="1" Name="gctrl_DanToc" AutoPopulateColumns="False" Margin="0,0,12,0" AllowColumnMRUFilterList="True" AllowMRUFilterList="True" IsFilterEnabled="True" ShowLoadingPanel="False" ShowBorder="False" AutoExpandAllGroups="True" IsRecursiveExpand="False" DesignTimeUseDistinctSampleValues="True" DesignTimeShowSampleData="True" IsEnabled="True">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="MADANTOC" Header="MÃ DÂN TỘC" ReadOnly="True" />
                <dxg:GridColumn FieldName="TENDANTOC" Header="TÊN DÂN TỘC" ReadOnly="True" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView x:Name="View" AutoWidth="True" ShowTotalSummary="True" ShowFixedTotalSummary="True" SearchString=" " ShowSearchPanelFindButton="True" SearchPanelClearOnClose="True"/>
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</UserControl>
